<view class="cart-container"><block wx:if="{{cartList.length>0}}"><view class="scroll"><block wx:for="{{cartList}}" wx:for-item="shop" wx:for-index="index" wx:key="id"><view class="shop-item"><text data-event-opts="{{[['tap',[['updateSelectedState',[index]]]]]}}" class="{{['select-box','iconfont','icon-31xuanzhong',shop.isSelected===true?'selected':'']}}" bindtap="__e"></text><image class="shop-img" src="{{shop.listPicUrl}}" mode></image><view class="right"><view class="name">{{shop.name}}</view><text class="price">{{'￥ '+cartList[index].count*cartList[index].retailPrice}}</text><view class="add-minus"><view class="wrap"><view data-event-opts="{{[['tap',[['changeShopCount',[index,-1]]]]]}}" class="minus" bindtap="__e">-</view><view class="count">{{shop.count}}</view><view data-event-opts="{{[['tap',[['changeShopCount',[index,1]]]]]}}" class="add" bindtap="__e">+</view></view></view></view></view></block></view></block><view class="footer"><view class="left"><text data-event-opts="{{[['tap',[['changeSelectedAll',['$event']]]]]}}" class="{{['select-box','iconfont','icon-31xuanzhong',selectedAll===true?'selected':'']}}" bindtap="__e"></text><text class="selectedCount">{{'已选 '+selectedCount}}</text></view><view class="right"><text>{{'合计：￥'+totalPrice}}</text><view class="buy">下单</view></view></view></view>