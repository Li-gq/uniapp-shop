page {
  height: 100%;
}
.cart-container {
  height: 100%;
}
.cart-container .scroll {
  height: calc(100% - 100rpx);
  background-color: #e2e2e2;
  overflow: scroll;
}
.cart-container .scroll .shop-item {
  width: 750rpx;
  padding: 20rpx;
  display: flex;
  background-color: white;
  border-radius: 10rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
}
.cart-container .scroll .shop-item .select-box {
  line-height: 200rpx;
  padding: 0 20rpx;
  font-size: 50rpx;
}
.cart-container .scroll .shop-item .select-box.selected {
  color: red;
}
.cart-container .scroll .shop-item .shop-img {
  flex: 0 0 200rpx;
  height: 200rpx;
  padding: 0 20rpx;
}
.cart-container .scroll .shop-item .right {
  flex: 1 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart-container .scroll .shop-item .right .name {
  line-height: 60rpx;
  width: 380rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cart-container .scroll .shop-item .right .price {
  line-height: 60rpx;
  color: red;
}
.cart-container .scroll .shop-item .right .add-minus {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-self: flex-end;
}
.cart-container .scroll .shop-item .right .add-minus .wrap {
  align-self: flex-end;
  display: flex;
}
.cart-container .scroll .shop-item .right .add-minus .wrap .minus {
  width: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
}
.cart-container .scroll .shop-item .right .add-minus .wrap .count {
  width: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
  border-left: none;
  font-size: 26rpx;
  font-weight: bold;
}
.cart-container .scroll .shop-item .right .add-minus .wrap .add {
  width: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
  border-left: none;
}
.cart-container .footer {
  width: 750rpx;
  height: 100rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
}
.cart-container .footer .left .select-box {
  font-size: 50rpx;
  padding: 20rpx;
  line-height: 100rpx;
}
.cart-container .footer .left .select-box.selected {
  color: red;
}
.cart-container .footer .left .selectedCount {
  line-height: 100rpx;
  font-size: 40rpx;
}
.cart-container .footer .right {
  display: flex;
}
.cart-container .footer .right text {
  line-height: 100rpx;
  font-size: 40rpx;
  margin-right: 20rpx;
}
.cart-container .footer .right .buy {
  background-color: red;
  color: white;
  padding: 0 60rpx;
  line-height: 100rpx;
}

