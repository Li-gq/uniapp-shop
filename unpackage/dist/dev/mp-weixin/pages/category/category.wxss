page {
  height: 100%;
}
.category-container {
  height: 100%;
}
.category-container .search-container {
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #dadada;
}
.category-container .search-container .search-button {
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
}
.category-container .content {
  height: calc(100% - 102rpx);
  display: flex;
}
.category-container .content .category-scroll {
  padding: 10rpx;
  height: 100%;
  flex: 0 0 160rpx;
}
.category-container .content .category-scroll .category-item {
  font-size: 26rpx;
  line-height: 80rpx;
  text-align: center;
  border-left: 4rpx solid transparent;
}
.category-container .content .category-scroll .category-item.active {
  border-left: 4rpx solid #bb0c04;
}
.category-container .content .right {
  overflow: scroll;
  flex: 1 0 auto;
  height: 100%;
  position: relative;
}
.category-container .content .right .show {
  position: absolute;
  right: 40rpx;
  width: 500rpx;
  height: 100%;
  overflow: scroll;
  scrollbar-width: none;
  -ms-overflow-style: none;
}
.category-container .content .right .show::-webkit-scrollbar {
  display: none;
}
.category-container .content .right .show .header {
  height: 320rpx;
  width: 100%;
}
.category-container .content .right .show .category-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.category-container .content .right .show .category-list::after {
  content: "";
  width: 130rpx;
}
.category-container .content .right .show .category-list .category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 130rpx;
  margin-bottom: 20rpx;
}
.category-container .content .right .show .category-list .category-item image {
  width: 100%;
  height: 130rpx;
}
.category-container .content .right .show .category-list .category-item .name {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
}

