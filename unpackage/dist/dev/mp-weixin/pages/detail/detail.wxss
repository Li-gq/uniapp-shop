page {
  height: 100%;
}
.detail-container {
  height: 100%;
  position: relative;
}
.header {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
}
.header .home {
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
}
.header .log {
  height: 60rpx;
  width: 207rpx;
}
.header .cart {
  height: 60rpx;
}
.header .cart .cart-icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
}
.header .cart .cart-count {
  position: relative;
  top: -.5em;
  color: red;
  vertical-align: top;
}
.shop-info {
  height: calc(100% - 101rpx - 100rpx);
  overflow: scroll;
  scrollbar-width: none;
  -ms-overflow-style: none;
}
.shop-info::-webkit-scrollbar {
  display: none;
}
.shop-info .show-shop .shop-image {
  width: 750rpx;
  height: 750rpx;
}
.shop-info .shop-prom-tag {
  background-color: red;
  color: white;
  line-height: 100rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 10rpx;
  margin: 20rpx;
}
.shop-info .price {
  display: block;
  color: red;
  font-size: 40rpx;
  font-weight: bold;
  padding-left: 20rpx;
}
.shop-info .name {
  display: block;
  padding-left: 20rpx;
}
.footer {
  position: absolute;
  bottom: 0;
  display: flex;
  left: 0;
  right: 0;
  background-color: white;
}
.footer .service {
  height: 100rpx;
  display: flex;
  border-top: 1rpx solid gray;
  border-right: 1rpx solid gray;
  padding: 0 20rpx;
}
.footer .service .icon {
  margin: auto;
  font-size: 50rpx;
}
.footer .buy {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  border-top: 1rpx solid gray;
  border-right: 1rpx solid gray;
  flex: 1;
}
.footer .add-cart {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: white;
  background-color: red;
  border-top: 1rpx solid gray;
  flex: 1;
}

