.header {
  padding: 40rpx;
  background-color: antiquewhite;
}
.header .avatar {
  display: inline-block;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background-color: white;
  margin-right: 50rpx;
}
.header .username {
  vertical-align: top;
  line-height: 50rpx;
}
.assets-wrap {
  padding: 20rpx;
}
.assets-wrap .title {
  display: block;
}
.assets-wrap .line {
  height: 2rpx;
  background-color: #ccc;
  margin: 20rpx 0;
}
.assets-wrap .assets-all {
  display: flex;
  justify-content: space-around;
}
.assets-wrap .assets-all .assets-item {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.set-wrap .grid .grid-item .grid-item-box {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.set-wrap .grid .grid-item .grid-item-box .icon {
  font-size: 80rpx;
}
.set-wrap .grid .grid-item .grid-item-box .text {
  font-size: 30rpx;
}

